// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Sport {
  F1
  FE
  XE
  INDY
  W
  WEC
}

model Session {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  type      SessionType
  round     Round       @relation(fields: [roundId], references: [id])
  roundId   String
  startDate DateTime
  endDate   DateTime
}

enum SessionType {
  PRACTICE
  QUALIFYING
  RACE
  SHAKEDOWN
}

model Location {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  title     String   @unique
  long      Decimal
  lat       Decimal
  rounds    Round[]
}

model Round {
  id         String    @id @default(uuid())
  createdAt  DateTime  @default(now())
  title      String    @unique
  season     String
  sessions   Session[]
  sport      Sport
  location   Location  @relation(fields: [locationId], references: [id])
  locationId String
  link       String
}
