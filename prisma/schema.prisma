// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Sport {
  F1
  FE
  XE
  INDY
  W
  WEC
}

model Session {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  type      SessionType
  number    Int?        @default(0)
  round     Round       @relation(fields: [roundId], references: [id], onDelete: Cascade)
  roundId   String
  startDate DateTime
  endDate   DateTime
}

enum SessionType {
  PRACTICE
  QUALIFYING
  RACE
  SHAKEDOWN
}

model Circuit {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  title     String   @unique
  long      Decimal? @default(0)
  lat       Decimal? @default(0)
  rounds    Round[]
}

model Round {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  title     String    @unique
  season    String
  sessions  Session[]
  sport     Sport
  circuit   Circuit   @relation(fields: [circuitId], references: [id], onDelete: Cascade)
  circuitId String
  link      String?
}
