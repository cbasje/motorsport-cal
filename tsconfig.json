{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "include": ["src", "types", "/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": { "~/*": ["./src/*"] },
        "rootDir": "./src"
    }
}
